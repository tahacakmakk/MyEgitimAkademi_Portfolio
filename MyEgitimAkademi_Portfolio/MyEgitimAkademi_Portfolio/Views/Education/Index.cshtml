
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Hayatım</h2>


<table class="table  table-bordered">

    <tr>
        <th>#</th>
        <th>Proje Adı</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>GitHub da Gör</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectID</td>
            <td>@item.Title</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Project/EditProject/@item.ProjectID" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Project/GitHubProject/@item.ProjectID" class="btn btn-success">GitHub</a></td>
        </tr>
    }

</table>

<a href="/Project/AddProject/" class="btn btn-outline-success">Yeni Proje Ekle</a>
