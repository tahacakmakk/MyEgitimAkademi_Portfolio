@using MyEgitimAkademi_Portfolio.Models
@model List<Address>
<section class="w3l-contactblock" id="contact">
    <div class="midd-w3 py-5">
        <div class="container py-lg-4 py-md-3">
            <div class="contact-heading text-center">
                <span class="text">Benimle irtibata geçin. </span>
                <h3 class="title-big">Birlikte çalışmaya <span>hazır mısınız ?</span></h3>
                <p class="mt-4">
                    Bir Proje Başlatalım! Beni işe alın.
                </p>
            </div>
            <div class="row mt-md-5 mt-4 pt-lg-3">
            @foreach(var item in Model)
            {
                <div class="col-lg-5">
                    <p>
                   @item.Description
                    </p>
                    <ul class="address mt-md-5 mt-4">
                        <li class="mb-3">
                            <p><span class="fa fa-phone"></span> <a href="tel:+404-11-22-89">@item.Phone</a></p>
                        </li>
                        <li class="mb-4">
                            <p><span class="fa fa-envelope-open"></span> <a href="mailto:design@portfolio.com">@item.Mail</a></p>
                        </li>
                        <li class="">
                            <p><span class="fa fa-map-marker"></span> @item.AddressDetail</p>
                        </li>
                    </ul>
                </div>
            }

            <div class="col-lg-7 mt-lg-0 mt-md-5 mt-4">
                <form method="post">
                    <div class="twice-two">
                        <input type="text" class="form-control" name="Name" id="w3lName" placeholder="Adını Soyadınız "
                               required="">
                        <input type="email" class="form-control" name="Mail" id="w3lSender" placeholder="Email Adresiniz "
                               required="">
                    </div>
                    <div class="twice">
                        <input type="text" class="form-control" name="Subject" id="w3lSubject"
                               placeholder="Konu" required="">
                    </div>
                    <textarea name="Message" class="form-control" id="w3lMessage" placeholder="Mesajınız"
                              required=""></textarea>
                    <div class="text-right">
                        <button type="submit" class="btn btn-secondary btn-style mt-4">Mesajı Gönder</button>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </div>
</section>
<div class="copyright  text-center">
    <div class="container">
        <p class="copy-footer-29">
            © @DateTime.Now.Year | Tüm Hakları Saklıdır.
        </p>
    </div>
</div>
<button onclick="topFunction()" id="movetop" title="Go to top">
    <span class="fa fa-angle-up"></span>
</button>