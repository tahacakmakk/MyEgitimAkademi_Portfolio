@model MyEgitimAkademi_Portfolio.Models.Testimonial 
@{
    ViewBag.Title = "EditTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Gümcelleme Sayfası</h2>

<form method="post">
    <label>Refereans ID</label>
    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Referans Unvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Görsel</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Yorum</label>
    @Html.TextAreaFor(x => x.Comment,5,3, new { @class = "form-control" })
    <br />
    <button class="btn btn-info"> Güncelle </button>
</form> 