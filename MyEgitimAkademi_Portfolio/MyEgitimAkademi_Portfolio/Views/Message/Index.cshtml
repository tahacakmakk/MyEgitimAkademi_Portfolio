@using MyEgitimAkademi_Portfolio.Models
@model List<Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Gelen Mesajlar </h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Gönderici Adı</th>
            <th>Gönderici Maili</th>
            <th>Konu</th>
            <th>Mesaj</th>
            
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        count++;
        <tbody>
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td>@item.Mail</td>
                <td>@item.Subject</td>
                <td>@item.Message</td>
            </tr>
        </tbody>
    }
</table>
