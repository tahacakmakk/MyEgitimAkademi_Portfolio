@model MyEgitimAkademi_Portfolio.Models.Project
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateProject</h2>

@using (Html.BeginForm("UpdateProject", "Project", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ProjectID)
    <div class="form-group">
        <label>Proje Başlığı</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Proje Kategorisi</label>
        @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Proje Tamamlanma Süresi</label>
        @Html.TextBoxFor(x => x.CompleteDay, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Proje Fiyatı</label>
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Proje Açıklaması</label>
        @Html.TextAreaFor(x => x.Description,5,5, new { @class = "form-control" })
    </div>
    <button class="btn btn-outline-info"> Kaydet</button>
}